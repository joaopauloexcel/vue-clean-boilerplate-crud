{
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "vite.config.ts"
    ],
    "allowJs": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "composite": true,
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "types": [
            "node",
            "vite/client"
        ]
    }
}